<% layout("/layouts/boilerplate") %>
<body>
  <h1 class="mb-4">All Listings</h1>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
      <div class="col mb-4">
        <div class="card h-100 listing-card">
          <a href="/listings/<%= listing._id %>">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height:20rem; object-fit:cover;">
          </a>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"><%= listing.description || "No description available" %></p>
            <p><strong>â‚¹ <%= listing.price %> / night</strong></p>
            <a href="/listings/<%= listing._id %>" class="btn btn-primary">View</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</body>
